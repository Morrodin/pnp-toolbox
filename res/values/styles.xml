<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CsAbHeaders">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>

    <!--Style for ability name labels on the character sheet view-->
    <style name="CsAbLabel">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_horizontal</item>


    </style>

    <!--Style for ability edit texts-->
    <style name="CsAbEditText">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>

    </style>

    <!--Style for + dividers on AC line-->
    <style name="CsAcPlus">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:text">+</item>

    </style>

    <!--Style for = dividers on AC line-->
    <style name="CsAcEqual">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:text">=</item>

    </style>

</resources>