<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/sign_in_activity_account_name_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="28sp"
        android:layout_centerInParent="true"
        android:text="@string/account_name_label"/>

    <EditText
        android:id="@+id/sign_in_activity_account_name_input"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@id/sign_in_activity_account_name_label"
        android:textSize="28sp"/>

    <Button
        android:id="@+id/sign_in_activity_sign_in_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/sign_in_activity_account_name_input"
        android:layout_centerInParent="true"
        android:textSize="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/sign_in"/>



</RelativeLayout>